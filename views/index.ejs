<%- include('./partials/header.ejs') %>

<div class="container">
    
    <div class="box-nav-d-flex justify-between mt-5 ">
        <a href="add" class="border-shadow">
            <span class="text-gradient">Add New Course <i class="fa-solid fa-user col-sm-2"></i></span>
        </a>
    </div>
    
      <div class="mt-3">
        <table class="table table-dark table-striped table-hover text-center">
            <thead>
                <tr>
                    <th> Course Code </th>
                    <th> Course Name </th>
                    <th> Credits </th>
                    <th> Department </th>
                    <th> Action </th>
                </tr>
            </thead>
            
            <tbody>
                <% data.forEach((item)=>{ %>
                    <tr>
                        <td> <%= item.course_code%> </td>
                        <td> <%= item.course_title%> </td>
                        <td> <%= item.credits%> </td>
                        <td> <%= item.department%> </td>
                        <td>
                            <a href="/edit/<%= item._id %>" class="btn border-shadow update"><span class="text-gradient"><i class="fas fa-pencil text-info"></i></span></a> 
                            <a href="/delete/<%= item._id %>" class="btn border-shadow delete"><span class="text-gradient"><i class="fas fa-trash text-danger"></i></span></a> 
                            
                            
                        </td>
                    </tr>

               <% })%>
            </tbody>
        </table>

      </div>
   
</div>

<%- include('./partials/footer.ejs') %>